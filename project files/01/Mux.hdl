/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Or(a=a, b=sel, out=aSelOrOut);
    Xor(a=b, b=sel, out=bSelOrOut);
    Not(in=bSelOrOut, out=xorOut);
    And(a=aSelOrOut, b=xorOut, out=secondOut);
    And(a=a,b=b,out=aBOut);
    Or(a=secondOut,b=aBOut, out=out);
}
